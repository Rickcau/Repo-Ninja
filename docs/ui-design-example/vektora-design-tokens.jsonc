{
  // ═══════════════════════════════════════════════════════════════════════════
  // Vektora Fintech Dashboard — Design Tokens
  // ═══════════════════════════════════════════════════════════════════════════
  //
  // Extracted from: Vektora-Fintech-Dashboard.jpg
  // Color model: Hex + HSL annotations
  // Theme: Dark-first design with light-mode token swaps
  //
  // Two core palettes (primary + secondary) in Tailwind-style ramps,
  // one blue-tinted gray ramp for surfaces, and accent colors for
  // status, charts, avatars, and complex visuals.
  // ═══════════════════════════════════════════════════════════════════════════


  // ─────────────────────────────────────────────────────────────────────────
  // 1. PALETTES
  // ─────────────────────────────────────────────────────────────────────────

  "palettes": {

    "primary": {
      "_description": "Chartreuse / lime — the dominant accent throughout the UI: active nav, CTA buttons, highlighted chart bars, pagination active page, featured-card glow border, credit-card chip, upgrade banner button",
      "_hue": "~78 (HSL)",
      "50":  "#FCFFE5",
      "100": "#F5FFCC",
      "200": "#EAFF99",
      "300": "#DBFF55",
      "400": "#CCFF00",
      "500": "#A8D900",
      "600": "#84B300",
      "700": "#628A00",
      "800": "#456300",
      "900": "#2D4000",
      "950": "#1A2600"
    },

    "secondary": {
      "_description": "Teal — used for 'Wire Transfer' badges, spending-bar segments, credit-card gradient undertone, and secondary data visualisation accents",
      "_hue": "~174 (HSL)",
      "50":  "#F0FDFA",
      "100": "#CCFBF1",
      "200": "#99F6E4",
      "300": "#5EEAD4",
      "400": "#2DD4BF",
      "500": "#14B8A6",
      "600": "#0D9488",
      "700": "#0F766E",
      "800": "#115E59",
      "900": "#134E4A",
      "950": "#042F2E"
    }
  },


  // ─────────────────────────────────────────────────────────────────────────
  // 2. GRAYS  (Blue-tinted "slate" for surfaces, borders, muted text)
  // ─────────────────────────────────────────────────────────────────────────

  "gray": {
    "_description": "Dark surfaces carry a distinct blue/indigo undertone (~hue 220). Five dark elevation levels are annotated below.",
    "50":  "#F8FAFC",
    "100": "#F1F5F9",
    "200": "#E2E8F0",
    "300": "#CBD5E1",
    "400": "#94A3B8",
    "500": "#64748B",
    "600": "#475569",
    "700": "#334155",
    "800": "#1E293B",
    "900": "#0F172A",
    "950": "#020617",

    "_elevationMapDark": {
      "_description": "Named surface stops derived from the gray ramp, dark mode only",
      "base":     "#080C16",
      "sidebar":  "#0C1019",
      "card":     "#111827",
      "raised":   "#1A2333",
      "overlay":  "#1F2D3D"
    }
  },


  // ─────────────────────────────────────────────────────────────────────────
  // 3. ACCENTS  (status badges, chart colors, avatars, complex visuals)
