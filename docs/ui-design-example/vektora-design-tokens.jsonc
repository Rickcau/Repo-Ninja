  "accents": {

    "green": {
      "_purpose": "Success / 'Received' status badge",
      "400": "#4ADE80",
      "500": "#22C55E",
      "600": "#16A34A"
    },

    "red": {
      "_purpose": "Error / 'Failed' status badge",
      "400": "#F87171",
      "500": "#EF4444",
      "600": "#DC2626"
    },

    "amber": {
      "_purpose": "Warning / 'Processed' status badge",
      "400": "#FBBF24",
      "500": "#F59E0B",
      "600": "#D97706"
    },

    "blue": {
      "_purpose": "'Bank Transfer' method badge, chart segment, avatar",
      "400": "#60A5FA",
      "500": "#3B82F6",
      "600": "#2563EB"
    },

    "coral": {
      "_purpose": "Shopping spending-bar segment",
      "400": "#FB7185",
      "500": "#F43F5E"
    },

    "purple": {
      "_purpose": "Avatar accent",
      "400": "#C084FC",
