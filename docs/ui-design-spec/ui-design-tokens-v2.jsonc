      "border": {
        "dark":  "rgba(244, 63, 94, 0.20)",
        "light": "rgba(244, 63, 94, 0.20)"
      },
      "bg": {
        "dark":  "rgba(244, 63, 94, 0.10)",
        "light": "rgba(244, 63, 94, 0.10)"
