          "text": "#0F172A"
        },
        "low": {
          "bg": { "dark": "#3b82f6", "light": "#3b82f6" },
          "text": "#FFFFFF"
        },
        "info": {
          "bg": { "dark": "#475569", "light": "#94A3B8" },
          "text": "#FFFFFF"
        }
      }
    },


    // ── Audit Check Status Badge ────────────────────────────────────────────

    "auditCheckStatus": {
      "_description": "Badge used on best-practices audit check rows. Same mapping, updated accent values.",
      "statusColorMap": {
        "pass": {
          "bg": { "dark": "#16a34a", "light": "#16a34a" },
          "text": "#FFFFFF"
        },
        "fail": {
          "bg": { "dark": "#dc2626", "light": "#dc2626" },
          "text": "#FFFFFF"
        },
        "warning": {
          "bg": { "dark": "#f59e0b", "light": "#eab308" },
          "text": "#0F172A"
        }
      }
    },


    // ── Nav Item ────────────────────────────────────────────────────────────

    "navItem": {
      "_description": "TRANSFORMED to Vektora style: active = solid primary fill with dark text. Collapsed sidebar shows icon only.",
      "layout": "flex row, gap 0.75rem, items-center",
      "height": "2.25rem",
      "radius": "md",
      "px": "0.75rem",
      "py": "0.5rem",
      "fontSize": "sm",
      "fontWeight": "medium",
      "transition": "background 150ms, color 150ms",

      "active": {
        "_description": "Solid chartreuse fill with dark text — high-contrast active state",
        "bg": "primary",
        "text": "text-on-primary",
        "iconColor": "text-on-primary",
        "fontWeight": "semibold",
        "_dark": { "bg": "#CCFF00", "text": "#0F172A" },
        "_light": { "bg": "#84B300", "text": "#0F172A" }
      },
      "inactive": {
        "bg": "transparent",
        "text": "text-secondary",
        "iconColor": "text-muted",
        "hoverBg": "surface-raised",
        "hoverText": "text-primary"
      },
      "icon": { "size": "1.125rem" },

      "sectionLabel": {
        "_description": "Collapsible section headers above nav groups (from Vektora sidebar pattern)",
        "fontSize": "2xs",
        "fontWeight": "semibold",
        "color": "text-muted",
        "textTransform": "uppercase",
        "letterSpacing": "wider",
        "paddingTop": "1.5rem",
        "paddingBottom": "0.5rem",
        "toggle": "chevron icon for collapse/expand"
      }
    },


