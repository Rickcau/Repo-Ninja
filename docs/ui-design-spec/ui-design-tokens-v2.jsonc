{
  // ═══════════════════════════════════════════════════════════════════════════
  // Repo-Ninja UI Design Tokens v2
  // ═══════════════════════════════════════════════════════════════════════════
  //
  // Merges Vektora Fintech Dashboard visual language into the existing
  // Repo-Ninja component structure.
  //
  // KEY CHANGES from v1:
  //   - Primary palette: Indigo -> Chartreuse/Lime (hue ~78)
  //   - Secondary palette: Slate -> Teal (hue ~174)
  //   - Gray: Achromatic -> Blue-tinted slate (hue ~220)
  //   - Default theme: Dark-first (class-based toggle remains)
  //   - Depth model: Elevation through brightness, not shadows
  //   - New effects: Glow emphasis, featured card pulse, chart bar grow
  //   - Sidebar: Now collapsible (15rem -> 4rem)
  //   - Header: Transparent bg, no bottom border
  //   - Nav items: Active = solid primary fill with dark text
  //   - Status badges: Leading dot + tinted translucent background
  //   - All v1 components preserved; visual treatments updated
  //
  // Color model: Hex (with approximate OKLCh in comments where helpful)
  // Usage: Single source of truth for all visual decisions.
  //        Reference from ui-design-brief-v2.md.
  // ═══════════════════════════════════════════════════════════════════════════


  // ─── 1. PALETTES ────────────────────────────────────────────────────────────
  // Full ramp from 50 (lightest) to 950 (darkest)

  "palettes": {

    "primary": {
      "_description": "Chartreuse / Lime — CTAs, active nav, focus rings, links, progress fills, chart highlights, featured-card glow",
      "_hue": "~78 (HSL) / ~128 (OKLCh)",
      "50":  "#FCFFE5",   // oklch(~0.99 0.06 128)
      "100": "#F5FFCC",   // oklch(~0.97 0.10 128)
      "200": "#EAFF99",   // oklch(~0.94 0.16 128)
      "300": "#DBFF55",   // oklch(~0.92 0.22 128)
      "400": "#CCFF00",   // oklch(~0.91 0.27 128) — brand primary (dark mode)
      "500": "#A8D900",   // oklch(~0.82 0.24 128)
      "600": "#84B300",   // oklch(~0.72 0.21 128) — brand primary (light mode)
      "700": "#628A00",   // oklch(~0.59 0.17 128)
      "800": "#456300",   // oklch(~0.45 0.13 128)
      "900": "#2D4000",   // oklch(~0.32 0.09 128)
      "950": "#1A2600"    // oklch(~0.22 0.06 128)
    },

    "secondary": {
      "_description": "Teal — secondary data viz, transfer badges, spending bar segments, secondary CTAs",
      "_hue": "~174 (HSL) / ~175 (OKLCh)",
      "50":  "#F0FDFA",   // oklch(~0.98 0.02 175)
      "100": "#CCFBF1",   // oklch(~0.95 0.06 175)
      "200": "#99F6E4",   // oklch(~0.91 0.11 175)
      "300": "#5EEAD4",   // oklch(~0.85 0.15 175)
      "400": "#2DD4BF",   // oklch(~0.79 0.15 175)
      "500": "#14B8A6",   // oklch(~0.72 0.14 175)
      "600": "#0D9488",   // oklch(~0.61 0.12 175)
      "700": "#0F766E",   // oklch(~0.52 0.10 175)
      "800": "#115E59",   // oklch(~0.43 0.08 175)
      "900": "#134E4A",   // oklch(~0.38 0.06 175)
      "950": "#042F2E"    // oklch(~0.25 0.04 175)
    }
  },


