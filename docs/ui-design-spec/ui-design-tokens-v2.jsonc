    "100": "#F1F5F9",   // oklch(~0.97 0.007 250)
    "200": "#E2E8F0",   // oklch(~0.93 0.012 250)
    "300": "#CBD5E1",   // oklch(~0.87 0.022 250)
    "400": "#94A3B8",   // oklch(~0.70 0.024 255)
    "500": "#64748B",   // oklch(~0.55 0.032 255)
    "600": "#475569",   // oklch(~0.45 0.040 258)
    "700": "#334155",   // oklch(~0.37 0.044 260)
    "800": "#1E293B",   // oklch(~0.27 0.032 264)
    "900": "#0F172A",   // oklch(~0.19 0.037 265)
    "950": "#020617",   // oklch(~0.12 0.030 264)

    "_elevationMapDark": {
      "_description": "Named surface stops for dark mode. Depth is conveyed through brightness, not shadows.",
      "base":    "#080C16",   // Deepest — page background
      "sidebar": "#0C1019",   // Slightly brighter — sidebar panel
      "card":    "#111827",   // Card / panel surface
      "raised":  "#1A2333",   // Hover rows, raised elements
      "overlay": "#1F2D3D"    // Popover, dropdown, dialog content
