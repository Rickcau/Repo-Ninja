  // ─── 13. LAYOUT ────────────────────────────────────────────────────────────
  // Updated to Vektora layout conventions.

  "layout": {

    "header": {
      "_description": "Transparent bg, no bottom border — cleaner Vektora treatment. Header sits at top of main content area.",
      "position": "sticky top-0",
      "zIndex": 50,
      "height": "3.5rem",
      "borderBottom": "none",
      "bg": "transparent",
      "px": "1.5rem",
      "content": "page-title (left) -- spacer -- icon buttons (right: theme toggle, notifications, user avatar)"
    },

    "sidebar": {
      "_description": "Collapsible sidebar — 15rem expanded, 4rem collapsed (Vektora pattern).",
      "width": { "expanded": "15rem", "collapsed": "4rem" },
      "position": "sticky left, full height",
      "borderRight": "border-subtle",
      "bg": "surface-sidebar",
      "minHeight": "100vh",
      "zIndex": 40,
      "collapseTransition": "animations.sidebarCollapse (250ms)",
      "nav": { "layout": "flex column", "gap": "0.25rem", "p": "1rem" },
      "collapseToggle": {
        "position": "top-right of sidebar header",
        "icon": "double-chevron-left (rotates 180 degrees when collapsed)",
        "size": "1.5rem",
        "color": "text-muted",
        "hoverColor": "text-secondary"
      },
      "collapsedBehavior": {
        "_description": "When collapsed, only icons are visible. Nav text is hidden. Tooltips show on hover.",
        "showIconsOnly": true,
        "tooltipOnHover": true,
        "sectionLabelsHidden": true
      }
    },

    "mainContent": {
      "_description": "Fluid layout — no max-width cap (Vektora style).",
      "flex": 1,
      "px": { "default": "1.5rem", "2xl": "2rem" },
      "py": "1.5rem",
      "maxWidth": "none",
      "animation": "fadeIn on load"
    },

    "pageWrapper": {
      "_description": "Removed max-width cap from v1 (was 80rem). Content is now fluid.",
      "maxWidth": "none",
      "margin": "0"
    },

    "shell": {
      "_description": "Root layout — sidebar + main content, full viewport height",
      "display": "flex, horizontal",
      "minHeight": "100vh"
    }
  },


  // ─── 14. OPACITY CONVENTIONS ───────────────────────────────────────────────
  // Merged from both v1 and Vektora conventions.

  "opacityConventions": {
    "_description": "Standard opacity modifiers used across the design system. Merged from v1 + Vektora.",

    // ── From Vektora ──
    "0.06-0.08": "Chart grid lines, very subtle dividers",
    "0.10":      "Status badge tinted backgrounds, primary-muted backgrounds, nav active tint (v1 legacy)",
    "0.12":      "Status badge backgrounds (Vektora standard — slightly stronger than 0.10)",
    "0.15":      "Secondary-muted backgrounds, info status muted",

    // ── Shared / v1 ──
    "0.20":      "Accent borders, error ring (light mode), rose error display border",
    "0.25":      "Primary glow (shadow), focus ring glow (Vektora)",
    "0.30":      "Primary-glow token, intense primary glow (Vektora). v1 used /30 for dark input bg.",
    "0.40":      "Intense overlay glow, credit card shadow",
    "0.50":      "Focus ring, hover overlays, muted icon opacity, dialog overlay (v1)",
    "0.60":      "Dark-mode heavy shadow base, dialog/sheet overlay (v2 -- slightly darker than v1)",
    "0.70":      "Credit card detail text (white at 70%)",
    "0.80":      "Secondary button hover (v1 legacy)",
    "0.90":      "Primary/destructive button hover (v1 legacy)",
    "0.95":      "Header background with backdrop blur (v1 legacy -- not used in v2 transparent header)"
  }
