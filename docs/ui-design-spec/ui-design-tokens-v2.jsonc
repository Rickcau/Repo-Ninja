  // ─── 5. TYPOGRAPHY ─────────────────────────────────────────────────────────

  "typography": {
    "fontFamilies": {
      "_note": "Repo-Ninja ships Geist fonts; we keep them rather than switching to Inter/JetBrains Mono from Vektora",
      "sans": "Geist Sans, system-ui, -apple-system, sans-serif",
      "mono": "Geist Mono, ui-monospace, SFMono-Regular, monospace"
    },

    "scale": {
      "_unit": "rem (1rem = 16px)",
      "2xs":  { "size": "0.625rem",  "lineHeight": "0.875rem", "_px": 10, "_note": "From Vektora — section labels, uppercase headers" },
      "xs":   { "size": "0.75rem",   "lineHeight": "1rem",     "_px": 12 },
      "sm":   { "size": "0.875rem",  "lineHeight": "1.25rem",  "_px": 14 },
      "base": { "size": "1rem",      "lineHeight": "1.5rem",   "_px": 16 },
      "lg":   { "size": "1.125rem",  "lineHeight": "1.75rem",  "_px": 18 },
      "xl":   { "size": "1.25rem",   "lineHeight": "1.75rem",  "_px": 20 },
      "2xl":  { "size": "1.5rem",    "lineHeight": "2rem",     "_px": 24 },
      "3xl":  { "size": "1.875rem",  "lineHeight": "2.25rem",  "_px": 30 },
      "4xl":  { "size": "2.25rem",   "lineHeight": "2.5rem",   "_px": 36 },
      "5xl":  { "size": "3rem",      "lineHeight": "1",        "_px": 48 }
    },

    "weights": {
      "normal":   400,
      "medium":   500,
      "semibold": 600,
      "bold":     700
    },

    "features": {
      "_description": "OpenType features applied globally",
      "rlig": 1,
      "calt": 1,
      "tnum": "Used on tabular numeric displays (scores, counts, monetary values, metrics)",
      "letterSpacing": {
        "_note": "Merged from Vektora for section header treatments",
        "tight":  "-0.025em",
        "normal": "0",
        "wide":   "0.05em",
        "wider":  "0.1em"
      }
    },

    "_usage": {
      "_note": "Merged from Vektora _usage map, adapted for Repo-Ninja pages",
      "pageTitle":        { "size": "2xl",  "weight": "bold",     "color": "text-primary" },
      "pageSubtitle":     { "size": "sm",   "weight": "normal",   "color": "text-secondary" },
      "cardMetricValue":  { "size": "3xl",  "weight": "bold",     "color": "text-primary", "features": "tabular-nums" },
      "cardLabel":        { "size": "xs",   "weight": "normal",   "color": "text-muted" },
      "sectionHeader":    { "size": "2xs",  "weight": "semibold", "color": "text-muted", "transform": "uppercase", "tracking": "wider" },
      "navItem":          { "size": "sm",   "weight": "medium",   "color": "text-secondary" },
      "navItemActive":    { "size": "sm",   "weight": "semibold", "color": "text-on-primary" },
      "tableHeader":      { "size": "sm",   "weight": "medium",   "color": "text-muted" },
      "tableCell":        { "size": "sm",   "weight": "normal",   "color": "text-primary" },
      "tableCellMono":    { "size": "xs",   "weight": "normal",   "color": "text-secondary", "font": "mono" },
      "badgeText":        { "size": "xs",   "weight": "medium" },
      "buttonText":       { "size": "sm",   "weight": "medium" },
      "dialogTitle":      { "size": "lg",   "weight": "semibold", "color": "text-primary" },
      "dialogDescription": { "size": "sm",  "weight": "normal",   "color": "text-secondary" },
      "heroNumber":       { "size": "5xl",  "weight": "bold",     "color": "text-primary", "features": "tabular-nums" }
    }
  },


