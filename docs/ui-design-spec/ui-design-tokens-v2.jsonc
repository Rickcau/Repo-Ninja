        "_dark": { "bg": "#CCFF00" },
        "_light": { "bg": "#84B300" }
      }
    },


    // ── Toast ───────────────────────────────────────────────────────────────

    "toast": {
      "_description": "Sonner-based notification system. Updated to dark surface-overlay bg.",
      "bg": "surface-overlay",
      "text": "text-primary",
      "border": "border-default",
      "radius": "lg",
      "shadow": "md",
      "icons": {
        "success": { "icon": "circle-check", "size": "1rem", "color": "status-success" },
