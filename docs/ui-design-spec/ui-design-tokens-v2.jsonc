  // ─── 11. ANIMATIONS ────────────────────────────────────────────────────────
  // MERGED: all v1 animations + Vektora additions

  "animations": {

    "_reducedMotion": "When prefers-reduced-motion: reduce is active, force all animation/transition durations to 0.01ms on every element including pseudo-elements.",

    "defaults": {
      "_note": "From Vektora — default transition for interactive elements",
      "transitionDuration": "150ms",
      "transitionEasing":   "cubic-bezier(0.4, 0, 0.2, 1)"
    },

    // ── v1 animations (preserved) ──

    "fadeIn": {
      "name": "fade-in",
      "duration": "0.5s",
      "easing": "ease-out",
      "keyframes": {
        "from": { "opacity": 0, "translateY": "10px" },
        "to":   { "opacity": 1, "translateY": "0" }
      }
    },

    "slideUp": {
      "name": "slide-up",
      "duration": "0.6s",
      "easing": "ease-out",
      "keyframes": {
        "from": { "opacity": 0, "translateY": "20px" },
        "to":   { "opacity": 1, "translateY": "0" }
      }
    },

    "spin": {
      "name": "spin",
      "duration": "1s",
      "easing": "linear",
      "iterationCount": "infinite",
      "keyframes": {
        "from": { "rotate": "0deg" },
        "to":   { "rotate": "360deg" }
      }
    },

    "animateIn": {
      "_description": "Popover / dropdown / dialog entrance (v1)",
      "fadeIn":  { "from": "opacity: 0",            "to": "opacity: 1" },
      "zoomIn":  { "from": "scale(0.95)",           "to": "scale(1)" },
      "slideFromTop":    { "translateY": "-8px -> 0" },
      "slideFromBottom": { "translateY": "8px -> 0" },
      "slideFromLeft":   { "translateX": "-8px -> 0" },
      "slideFromRight":  { "translateX": "8px -> 0" },
      "duration": "150ms-200ms",
      "easing": "ease-out"
    },

    "animateOut": {
      "_description": "Popover / dropdown / dialog exit (reverse of animateIn)",
      "fadeOut": { "from": "opacity: 1",  "to": "opacity: 0" },
      "zoomOut": { "from": "scale(1)",    "to": "scale(0.95)" },
      "duration": "150ms-200ms",
      "easing": "ease-in"
    },

    "sheetIn": {
      "duration": "500ms",
      "easing": "ease-in-out",
      "slideFromRight":  "translateX(100%) -> translateX(0)",
      "slideFromLeft":   "translateX(-100%) -> translateX(0)",
      "slideFromTop":    "translateY(-100%) -> translateY(0)",
      "slideFromBottom": "translateY(100%) -> translateY(0)"
    },

    "sheetOut": {
      "duration": "300ms",
      "easing": "ease-in-out"
    },

