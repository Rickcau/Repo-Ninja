  // ─── TYPOGRAPHY ───────────────────────────────────────────────────────────

  "typography": {
    "fontFamilies": {
      "sans": "Geist Sans, system-ui, -apple-system, sans-serif",
      "mono": "Geist Mono, ui-monospace, SFMono-Regular, monospace"
    },
    "scale": {
      "_unit": "rem (1rem = 16px)",
      "xs":   { "size": "0.75rem",  "lineHeight": "1rem"    },
      "sm":   { "size": "0.875rem", "lineHeight": "1.25rem" },
      "base": { "size": "1rem",     "lineHeight": "1.5rem"  },
      "lg":   { "size": "1.125rem", "lineHeight": "1.75rem" },
      "xl":   { "size": "1.25rem",  "lineHeight": "1.75rem" },
      "2xl":  { "size": "1.5rem",   "lineHeight": "2rem"    },
      "3xl":  { "size": "1.875rem", "lineHeight": "2.25rem" },
      "4xl":  { "size": "2.25rem",  "lineHeight": "2.5rem"  },
      "5xl":  { "size": "3rem",     "lineHeight": "1"       }
    },
    "weights": {
      "normal":   400,
      "medium":   500,
      "semibold": 600,
      "bold":     700
    },
    "features": {
      "_description": "OpenType features applied globally",
      "rlig": 1,
      "calt": 1,
      "tnum": "Used on tabular numeric displays (scores, counts)"
    }
  },

  // ─── SPACING ──────────────────────────────────────────────────────────────

  "spacing": {
    "_unit": "rem",
    "_description": "4px base grid (0.25rem increments)",
    "0":    "0",
    "0.5":  "0.125rem",
    "1":    "0.25rem",
    "1.5":  "0.375rem",
    "2":    "0.5rem",
    "2.5":  "0.625rem",
    "3":    "0.75rem",
    "3.5":  "0.875rem",
    "4":    "1rem",
    "5":    "1.25rem",
    "6":    "1.5rem",
    "7":    "1.75rem",
    "8":    "2rem",
    "10":   "2.5rem",
    "12":   "3rem",
    "14":   "3.5rem",
    "16":   "4rem",
    "20":   "5rem",
    "24":   "6rem"
  },

  // ─── RADIUS ───────────────────────────────────────────────────────────────

  "radius": {
    "_base": "0.625rem",
    "_description": "All radii derive from --radius (0.625rem = 10px)",
    "xs":  "2px",
    "sm":  "calc(0.625rem - 4px)",
    "md":  "calc(0.625rem - 2px)",
    "lg":  "0.625rem",
    "xl":  "calc(0.625rem + 4px)",
    "2xl": "calc(0.625rem + 8px)",
    "3xl": "calc(0.625rem + 12px)",
    "4xl": "calc(0.625rem + 16px)",
    "full": "9999px",
    "_computed": {
      "sm":  "6px",
      "md":  "8px",
      "lg":  "10px",
      "xl":  "14px",
      "2xl": "18px",
      "3xl": "22px",
      "4xl": "26px"
    }
  },

  // ─── SHADOWS ──────────────────────────────────────────────────────────────

  "shadows": {
    "xs":  "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "sm":  "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md":  "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg":  "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl":  "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },

  // ─── BREAKPOINTS ──────────────────────────────────────────────────────────

  "breakpoints": {
    "_description": "Tailwind v4 defaults — mobile-first (min-width)",
    "sm":  "640px",
    "md":  "768px",
    "lg":  "1024px",
    "xl":  "1280px",
    "2xl": "1536px"
  },

  // ─── ANIMATIONS ───────────────────────────────────────────────────────────

  "animations": {
    "fadeIn": {
      "name": "fade-in",
      "duration": "0.5s",
      "easing": "ease-out",
      "keyframes": {
        "from": { "opacity": 0, "translateY": "10px" },
        "to":   { "opacity": 1, "translateY": "0" }
      }
    },
    "slideUp": {
      "name": "slide-up",
      "duration": "0.6s",
      "easing": "ease-out",
      "keyframes": {
        "from": { "opacity": 0, "translateY": "20px" },
        "to":   { "opacity": 1, "translateY": "0" }
      }
    },
    "spin": {
      "name": "spin",
      "duration": "1s",
      "easing": "linear",
      "iterationCount": "infinite",
      "keyframes": {
        "from": { "rotate": "0deg" },
        "to":   { "rotate": "360deg" }
      }
    },
    "animateIn": {
      "_description": "Popover / dropdown / dialog entrance",
      "fadeIn":  { "from": "opacity: 0",            "to": "opacity: 1" },
      "zoomIn":  { "from": "scale(0.95)",           "to": "scale(1)" },
      "slideFromTop":    { "translateY": "-8px → 0" },
      "slideFromBottom": { "translateY": "8px → 0" },
      "slideFromLeft":   { "translateX": "-8px → 0" },
      "slideFromRight":  { "translateX": "8px → 0" },
      "duration": "150ms–200ms",
      "easing": "ease-out"
    },
    "animateOut": {
      "_description": "Popover / dropdown / dialog exit (reverse of animateIn)",
      "fadeOut": { "from": "opacity: 1",  "to": "opacity: 0" },
      "zoomOut": { "from": "scale(1)",    "to": "scale(0.95)" },
      "duration": "150ms–200ms",
      "easing": "ease-in"
    },
    "sheetIn": {
      "duration": "500ms",
      "easing": "ease-in-out",
      "slideFromRight":  "translateX(100%) → translateX(0)",
      "slideFromLeft":   "translateX(-100%) → translateX(0)",
      "slideFromTop":    "translateY(-100%) → translateY(0)",
      "slideFromBottom": "translateY(100%) → translateY(0)"
    },
    "sheetOut": {
      "duration": "300ms",
      "easing": "ease-in-out"
    }
  },

