  "components": {

    "button": {
      "base": {
        "display": "inline-flex",
        "alignment": "center",
        "gap": "0.5rem",
        "radius": "md",
        "fontSize": "sm",
        "fontWeight": "medium",
        "transition": "all",
        "focusRing": "3px ring in ring color at 50% opacity",
        "disabled": { "pointerEvents": "none", "opacity": 0.5 }
      },
      "variants": {
        "default":     { "bg": "primary", "text": "primary-foreground", "hoverBg": "primary/90" },
        "destructive": { "bg": "destructive", "text": "white", "hoverBg": "destructive/90", "darkBg": "destructive/60" },
        "outline":     { "bg": "background", "border": true, "shadow": "xs", "hoverBg": "accent", "hoverText": "accent-foreground", "darkBg": "input/30" },
        "secondary":   { "bg": "secondary", "text": "secondary-foreground", "hoverBg": "secondary/80" },
        "ghost":       { "bg": "transparent", "hoverBg": "accent", "hoverText": "accent-foreground", "darkHoverBg": "accent/50" },
        "link":        { "text": "primary", "decoration": "underline on hover", "underlineOffset": "4px" }
      },
      "sizes": {
        "xs":      { "height": "1.5rem",  "px": "0.5rem",  "fontSize": "xs", "radius": "md", "gap": "0.25rem" },
        "sm":      { "height": "2rem",    "px": "0.75rem", "radius": "md", "gap": "0.375rem" },
        "default": { "height": "2.25rem", "px": "1rem",    "py": "0.5rem" },
        "lg":      { "height": "2.5rem",  "px": "1.5rem",  "radius": "md" },
        "icon":    { "size": "2.25rem" },
        "icon-xs": { "size": "1.5rem",  "radius": "md" },
        "icon-sm": { "size": "2rem" },
        "icon-lg": { "size": "2.5rem" }
      }
    },

    "badge": {
      "base": {
        "display": "inline-flex",
        "alignment": "center",
        "radius": "full",
        "border": "transparent",
        "px": "0.5rem",
        "py": "0.125rem",
        "fontSize": "xs",
        "fontWeight": "medium",
        "transition": "color, box-shadow"
      },
      "variants": {
        "default":     { "bg": "primary", "text": "primary-foreground" },
        "secondary":   { "bg": "secondary", "text": "secondary-foreground" },
        "destructive": { "bg": "destructive", "text": "white", "darkBg": "destructive/60" },
        "outline":     { "border": "border", "text": "foreground" },
        "ghost":       { "bg": "transparent" },
        "link":        { "text": "primary", "decoration": "underline on hover" }
      }
    },

    "card": {
      "structure": {
        "bg": "card",
        "text": "card-foreground",
        "radius": "xl",
        "border": true,
        "shadow": "sm",
        "padding": { "y": "1.5rem" },
        "gap": "1.5rem"
      },
      "header": { "px": "1.5rem", "gap": "0.5rem" },
      "title":  { "fontWeight": "semibold", "lineHeight": "none" },
      "description": { "fontSize": "sm", "color": "muted-foreground" },
      "content": { "px": "1.5rem" },
      "footer":  { "px": "1.5rem", "display": "flex", "alignment": "center" }
    },

    "input": {
      "height": "2.25rem",
      "radius": "md",
      "border": "input",
      "bg": "transparent",
      "px": "0.75rem",
      "py": "0.25rem",
      "fontSize": { "mobile": "base", "desktop": "sm" },
      "shadow": "xs",
      "placeholder": "muted-foreground",
      "darkBg": "input/30",
      "focusRing": "3px ring in ring color at 50% opacity",
      "invalidRing": "destructive/20 (dark: destructive/40)"
    },

    "textarea": {
      "minHeight": "4rem",
      "radius": "md",
      "border": "input",
      "bg": "transparent",
      "px": "0.75rem",
      "py": "0.5rem",
      "fontSize": { "mobile": "base", "desktop": "sm" },
      "shadow": "xs",
      "darkBg": "input/30"
    },

    "select": {
      "trigger": {
        "heights": { "default": "2.25rem", "sm": "2rem" },
        "radius": "md",
        "border": "input",
        "bg": "transparent",
        "px": "0.75rem",
        "shadow": "xs",
        "darkBg": "input/30",
        "icon": "chevron-down at 50% opacity"
      },
      "content": {
        "bg": "popover",
        "text": "popover-foreground",
        "radius": "md",
        "border": true,
        "shadow": "md",
        "animation": "animateIn / animateOut"
      },
      "item": {
        "radius": "sm",
        "px": "0.5rem",
        "py": "0.375rem",
        "fontSize": "sm",
        "hoverBg": "accent",
        "hoverText": "accent-foreground",
        "indicator": "check icon, right-aligned"
      }
    },

    "checkbox": {
      "size": "1rem",
      "radius": "4px",
      "border": "input",
      "shadow": "xs",
      "darkBg": "input/30",
      "checked": { "bg": "primary", "text": "primary-foreground", "border": "primary" },
      "indicator": "check icon, 0.875rem"
    },

    "tabs": {
      "variants": {
        "default": {
          "list": { "bg": "muted", "radius": "lg", "height": "2.25rem", "padding": "3px" },
          "trigger": {
            "fontSize": "sm",
            "fontWeight": "medium",
            "radius": "md",
            "px": "0.5rem",
            "py": "0.25rem",
            "inactive": { "text": "foreground/60 (dark: muted-foreground)" },
            "active":   { "bg": "background", "text": "foreground", "shadow": "sm", "darkBg": "input/30" }
          }
        },
        "line": {
          "list": { "bg": "transparent", "gap": "0.25rem" },
          "trigger": {
            "active": { "underline": "2px bar on bottom edge in foreground color" }
          }
        }
      },
      "content": { "flex": 1 }
    },

    "table": {
      "container": { "overflow": "x-auto" },
      "root": { "width": "full", "fontSize": "sm", "captionSide": "bottom" },
      "header": { "borderBottom": true },
      "head": {
        "height": "2.5rem",
        "px": "0.5rem",
        "text": "foreground",
        "fontWeight": "medium",
        "whiteSpace": "nowrap"
      },
      "body": { "lastRowBorder": false },
      "row": {
        "borderBottom": true,
        "hoverBg": "muted/50",
        "selectedBg": "muted",
        "transition": "colors"
      },
      "cell": {
        "p": "0.5rem",
        "verticalAlign": "middle",
        "whiteSpace": "nowrap"
      },
      "footer": { "bg": "muted/50", "borderTop": true, "fontWeight": "medium" },
      "caption": { "mt": "1rem", "fontSize": "sm", "text": "muted-foreground" }
    },

    "dialog": {
      "overlay": {
        "bg": "black/50",
        "position": "fixed inset-0",
        "zIndex": 50,
        "animation": "fade in/out"
      },
      "content": {
        "bg": "background",
        "radius": "lg",
        "border": true,
        "shadow": "lg",
        "p": "1.5rem",
        "gap": "1rem",
        "maxWidth": { "mobile": "calc(100% - 2rem)", "sm": "32rem" },
        "position": "centered fixed",
        "animation": "fade + zoom in/out, 200ms"
      },
      "header": { "layout": "flex column", "gap": "0.5rem", "textAlign": { "mobile": "center", "sm": "left" } },
      "title":  { "fontSize": "lg", "fontWeight": "semibold" },
      "description": { "fontSize": "sm", "color": "muted-foreground" },
      "footer": { "layout": "flex column-reverse (mobile), row end-aligned (sm)", "gap": "0.5rem" },
      "closeButton": {
        "position": "absolute top-right",
        "offset": "1rem",
        "opacity": "0.7 → 1.0 on hover",
        "icon": "x-icon"
      }
    },

    "sheet": {
      "overlay": {
        "bg": "black/50",
        "animation": "fade in/out"
      },
      "content": {
        "bg": "background",
        "shadow": "lg",
        "gap": "1rem",
        "sides": {
          "right": { "border": "left", "width": "75% (max 24rem on sm+)", "animation": "slide from right" },
          "left":  { "border": "right", "width": "75% (max 24rem on sm+)", "animation": "slide from left" },
          "top":   { "border": "bottom", "height": "auto", "animation": "slide from top" },
          "bottom":{ "border": "top",    "height": "auto", "animation": "slide from bottom" }
        },
        "openDuration": "500ms",
        "closeDuration": "300ms"
      },
      "header": { "p": "1rem", "gap": "0.375rem" },
      "footer": { "p": "1rem", "marginTop": "auto" },
      "title":  { "fontWeight": "semibold", "color": "foreground" },
      "description": { "fontSize": "sm", "color": "muted-foreground" }
    },

    "dropdownMenu": {
      "content": {
        "bg": "popover",
        "text": "popover-foreground",
        "radius": "md",
        "border": true,
        "shadow": "md",
        "p": "0.25rem",
        "minWidth": "8rem",
        "animation": "animateIn / animateOut"
      },
      "item": {
        "radius": "sm",
        "px": "0.5rem",
        "py": "0.375rem",
        "fontSize": "sm",
        "hoverBg": "accent",
        "hoverText": "accent-foreground",
        "iconColor": "muted-foreground",
        "destructiveVariant": { "text": "destructive", "hoverBg": "destructive/10 (dark: destructive/20)" }
      },
      "separator": { "bg": "border", "height": "1px", "mx": "-0.25rem", "my": "0.25rem" },
      "label": { "fontSize": "sm", "fontWeight": "medium", "px": "0.5rem", "py": "0.375rem" },
      "shortcut": { "fontSize": "xs", "color": "muted-foreground", "tracking": "widest", "ml": "auto" }
    },

    "statusBadge": {
      "_description": "Badge variant used for agent task status display",
      "base": "badge/outline + capitalize",
      "statusColorMap": {
        "queued":    { "bg": "muted",          "text": "muted-foreground", "border": "border" },
        "running":   { "bg": "violet-500/10",  "text": "violet-600 (dark: violet-400)", "border": "violet-500/20" },
        "completed": { "bg": "emerald-500/10", "text": "emerald-600 (dark: emerald-400)", "border": "emerald-500/20" },
        "failed":    { "bg": "rose-500/10",    "text": "rose-600 (dark: rose-400)", "border": "rose-500/20" },
        "cancelled": { "bg": "amber-500/10",   "text": "amber-600 (dark: amber-400)", "border": "amber-500/20" }
      }
    },

    "findingSeverity": {
      "_description": "Badge used on code review finding cards",
      "severityColorMap": {
        "high":   { "bg": "red-600",    "text": "white" },
        "medium": { "bg": "yellow-500", "text": "black" },
        "low":    { "bg": "blue-500",   "text": "white" },
        "info":   { "bg": "gray-400",   "text": "white" }
      }
    },

    "auditCheckStatus": {
      "_description": "Badge used on best-practices audit check rows",
      "statusColorMap": {
        "pass":    { "bg": "green-600",  "text": "white" },
        "fail":    { "bg": "red-600",    "text": "white" },
        "warning": { "bg": "yellow-500", "text": "black" }
      }
    },

    "navItem": {
      "layout": "flex row, gap 0.75rem, items-center",
      "radius": "md",
      "px": "0.75rem",
      "py": "0.5rem",
      "fontSize": "sm",
      "transition": "colors",
      "active": {
        "bg": "primary/10",
        "text": "primary",
        "fontWeight": "medium"
      },
      "inactive": {
        "text": "muted-foreground",
        "hoverBg": "accent/50",
        "hoverText": "foreground"
      },
      "icon": { "size": "1rem" }
    },

    "progressBar": {
      "_description": "Used for category scores and compliance bars",
      "track": {
        "height": { "thin": "0.5rem", "thick": "0.75rem" },
        "bg": "muted",
        "radius": "full",
        "overflow": "hidden"
      },
      "fill": {
        "bg": "primary",
        "radius": "full",
        "transition": "width",
        "widthRule": "percentage of value/max"
      }
    },

    "toast": {
      "_description": "Sonner-based notification system",
      "bg": "popover",
      "text": "popover-foreground",
      "border": "border",
      "radius": "radius (base)",
      "icons": {
        "success": "circle-check, 1rem",
        "info":    "info-circle, 1rem",
        "warning": "triangle-alert, 1rem",
        "error":   "octagon-x, 1rem",
        "loading": "loader-2, 1rem, spinning"
      }
    },

    "themeToggle": {
      "_description": "Dark/light mode switch in header",
      "button": "ghost variant, icon size",
      "sunIcon":  { "visible": "light mode", "transition": "rotate 0→-90, scale 1→0" },
      "moonIcon": { "visible": "dark mode",  "transition": "rotate 90→0, scale 0→1" }
    }
  },

  // ─── LAYOUT ───────────────────────────────────────────────────────────────

  "layout": {
    "header": {
      "position": "sticky top-0",
      "zIndex": 50,
      "height": "3.5rem",
      "borderBottom": true,
      "bg": "background/95 with backdrop-blur",
      "px": "1rem",
      "content": "logo (left) — spacer — theme toggle + user info + settings + sign out (right)"
    },
    "sidebar": {
      "width": "15rem",
      "borderRight": true,
      "bg": "background",
      "minHeight": "calc(100vh - 3.5rem)",
      "nav": { "layout": "flex column", "gap": "0.25rem", "p": "0.75rem" }
    },
    "mainContent": {
      "flex": 1,
      "px": { "mobile": "1rem", "sm": "1.5rem", "lg": "2rem" },
      "py": "2rem",
      "animation": "fadeIn on load"
    },
    "pageWrapper": {
      "maxWidth": "80rem",
      "margin": "auto"
    }
  },

  // ─── OPACITY CONVENTIONS ──────────────────────────────────────────────────

  "opacityConventions": {
    "_description": "Standard opacity modifiers used across the design system",
    "/10": "Tinted backgrounds (status badges, active nav bg)",
    "/20": "Accent borders, error ring light mode",
    "/30": "Dark mode input backgrounds",
    "/40": "Error ring dark mode",
    "/50": "Focus ring glow, hover overlays, muted icon opacity, overlay bg",
    "/60": "Dark mode destructive bg, inactive tab text",
    "/80": "Hover state for secondary buttons",
    "/90": "Hover state for primary/destructive buttons",
    "/95": "Header background (with backdrop blur)"
  }
}
